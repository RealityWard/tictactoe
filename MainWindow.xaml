<Window x:Class="tictactoe.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:tictactoe"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Background="#FF443ABB">
    <Border x:Name="gridBorder" Margin="10,10,10,10" Padding="5,5,5,5" BorderThickness="3,3,3,3" Opacity="0.5" BorderBrush="White">
        <Grid x:Name="mainGrid">
            <Grid.RowDefinitions>
                <RowDefinition x:Name="row0"/>
                <RowDefinition x:Name="row1"/>
                <RowDefinition x:Name="row2"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition x:Name="col0"/>
                <ColumnDefinition x:Name="col1"/>
                <ColumnDefinition x:Name="col2"/>
            </Grid.ColumnDefinitions>
            <Image x:Name="image" Source="/assets/x_red.png" Margin="5,5,5,5"/>
            <Button x:Name="btn0" Margin="5,5,5,5" Background="{x:Null}" BorderBrush="{x:Null}" Foreground="{x:Null}" ScrollViewer.VerticalScrollBarVisibility="Disabled" Click="TttBtnClick"/>
            <Button x:Name="btn1" Margin="5,5,5,5" Grid.Column="1" Background="{x:Null}" BorderBrush="{x:Null}" Foreground="{x:Null}" ScrollViewer.VerticalScrollBarVisibility="Disabled"/>
            <Button x:Name="btn2" Margin="5,5,5,5" Grid.Column="2" Background="{x:Null}" BorderBrush="{x:Null}" Foreground="{x:Null}" ScrollViewer.VerticalScrollBarVisibility="Disabled"/>
            <Button x:Name="btn3" Margin="5,5,5,5" Grid.Row="1" Background="{x:Null}" BorderBrush="{x:Null}" Foreground="{x:Null}" ScrollViewer.VerticalScrollBarVisibility="Disabled"/>
            <Button x:Name="btn4" Margin="5,5,5,5" Grid.Row="1" Grid.Column="1" Background="{x:Null}" BorderBrush="{x:Null}" Foreground="{x:Null}" ScrollViewer.VerticalScrollBarVisibility="Disabled"/>
            <Button x:Name="btn5" Margin="5,5,5,5" Grid.Row="1" Grid.Column="2" Background="{x:Null}" BorderBrush="{x:Null}" Foreground="{x:Null}" ScrollViewer.VerticalScrollBarVisibility="Disabled"/>
            <Button x:Name="btn6" Margin="5,5,5,5" Grid.Row="2" Background="{x:Null}" BorderBrush="{x:Null}" Foreground="{x:Null}" ScrollViewer.VerticalScrollBarVisibility="Disabled"/>
            <Button x:Name="btn7" Margin="5,5,5,5" Grid.Row="2" Grid.Column="1" Background="{x:Null}" BorderBrush="{x:Null}" Foreground="{x:Null}" ScrollViewer.VerticalScrollBarVisibility="Disabled"/>
            <Button x:Name="btn8" Margin="5,5,5,5" Grid.Row="2" Grid.Column="2" Background="{x:Null}" BorderBrush="{x:Null}" Foreground="{x:Null}" ScrollViewer.VerticalScrollBarVisibility="Disabled"/>
        </Grid>
    </Border>
</Window>
